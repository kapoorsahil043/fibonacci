package programs;

public class App {
   
    public static void main(String[] args) {
        int n = 6;
        long first=0,  second=1;
        System.out.println(fibonacci(n,first,second));
    }

    // 0 1 1 2 3(4) 5(5) 8(6) 13(7)

    public static long fibonacci(int n,long first, long second){
        if(n == 0){
            return first;
        }
        
        if(n == 1){
            return second;
        }
        long r = first + second;
        long previousResult = second;
        --n;
        return fibonacci(n,previousResult,r);
    }
}
